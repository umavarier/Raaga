<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head') %>
<body class="overflow-y-hidden" style="background-color: #f5caca;">
    <%-include ('../partials/top-navbar') %>

      <section class=" block vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3 ">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-80 ">
                    <div class=" col-12 col-md-9 col-lg-7 col-xl-6 ">
                        <div class="card  mt-5 " >
                            <div class="card-body p-3 " style="color:#5d0505">
                                <h1 class="reg  text-center mb-3 ">Admin Login</h1>
                              <span class="text-danger"><%= message %></span>
                                <form class="adminlogin" id="adminlogin" action="/admin/adminlogin" method="POST">

                                    <div class="input-control mb-4 ">
                                        <label class="form-label" for="adminname">Admin Name</label>
                                        <input type="text" id="adminname" name="adminname"
                                            class="form-control form-control-lg" />
                                        <!-- <small>Error message</small> -->
                                    </div>
                                    <div class="input-control mb-4 ">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" id="adminpassword" name="adminpassword"
                                            class="form-control form-control-lg" />
                                        <!-- <small>Error message</small> -->
                                    </div>
                                    <div class="mb-4 d-flex justify-content-center  btn-lg type=submit">
                                        <button class=" btn login-btn m-auto px-5 py-1 rounded-pill fs-3" type="submit" name="submit" id="submit">Login</button>
                                      </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%-include('../partials/adminFooter') %>

 <%-include ('../partials/bottom-navbar') %>
 <script src="/script/scriptadmin.js"></script>
</body>
</html>